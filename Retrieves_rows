import pandas as pd

# Sample data
data = {
    'Name': ['Alice', 'Bob', 'Charlie', 'David', 'Edward'],
    'Age': [24, 27, 22, 32, 29],
    'City': ['New York', 'Los Angeles', 'New York', 'Chicago', 'New York']
}

# Creating DataFrame
df = pd.DataFrame(data)

# Function to retrieve rows based on column value
def get_rows_by_column_value(df, column_name, value):
    return df[df[column_name] == value]

# Example usage
column_name = 'City'
value = 'New York'
result = get_rows_by_column_value(df, column_name, value)

print(result)
